<h2 class="header-form">Forgot your password?</h2>
<div class="form" style="width:50%; margin:auto;">
<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
  <%#= render "devise/shared/error_messages", resource: resource %>

  <div class="form-field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", style: 'border-radius: 5px; padding:3px; width:100%;'  %>
  </div>

  <div class="actions">
    <%= f.submit "Send me reset password instructions" , style:'border-radius: 5px; height: 40px; width: 80%; margin-left: 10%;' %>
  </div>
<% end %>

<%#= render "devise/shared/links" %>
</div>
