<h1 class="header" style="margin-bottom:20px;">Products</h1>

  <div class="row" style="display:flex; flex-wrap: wrap; flex-direction: row; width: 100%; box-sizing: border-box; margin: 0px;">
    <% @products.each do |product| %>
      <div class="column-md-3" style="position: relative; display:block; width: 25%; padding-right: 10px; padding-left: 10px; margin-bottom:10px; min-width:320px;">
      <div class="card card-product-grid" style="">
      <figcaption class="info-wrap" style="flex-direction: row;">
        <div style="text-align: center; width: 100%; height:300px; overflow:hidden;">
          <%= image_tag(product.image, :gravity =>"center", :height =>300 , :weight => 250, :crop=>"fill") %> 
        </div>

        <div class="link" style="margin:8px; font-weight:600; font-size:18px; overflow:hidden;height:30px;">
          <%= link_to product.title, product, style:"color: black; text-decoration:none; flex-wrap:nowrap;" %>
        </div>
        <div style="margin:8px; font-style:Italic; height:50px; overflow:hidden; ">
          <%= product.description %>
        </div>
        <div style="margin:8px; overflow:hidden;">
          $ <%= number_with_precision(product.price, precision: 2) %>
        </div>
        <div style="margin:8px; color:grey; font-style:Italic; overflow:hidden;">
          Sold : <%= product.sold %>
        </div>

        </figcaption>
      </div>
      </div>
    <% end %>
  </div>
<br>

