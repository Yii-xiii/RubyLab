<p id="notice"><%= notice %></p>

<h1>Product Orders</h1>

<table>
  <thead>
    <tr>
      <th>Spec</th>
      <th>Product</th>
      <th>Order</th>
      <th>Quantity</th>
      <th>Amount</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @product_orders.each do |product_order| %>
      <tr>
        <td><%= product_order.spec_id %></td>
        <td><%= product_order.product_id %></td>
        <td><%= product_order.order_id %></td>
        <td><%= product_order.quantity %></td>
        <td><%= product_order.amount %></td>
        <td><%= link_to 'Show', product_order %></td>
        <td><%= link_to 'Edit', edit_product_order_path(product_order) %></td>
        <td><%= link_to 'Destroy', product_order, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

