<h1>Specs</h1>

<div>
  
<div>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @specs.each do |spec| %>
      <tr>
        <td><%= spec.title %></td>
        <td><%= link_to 'Show', product_spec_path(@product, spec) %></td>
        <td><%= link_to 'Edit', edit_product_spec_path(@product, spec) %></td>
        <td><%= link_to 'Destroy', product_spec_path(@product, spec), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Spec', new_product_spec_path(@product) %>
