<div class="form" >
  <%= form_with(model: [@product, spec]) do |form| %>
    <% if spec.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(spec.errors.count, "error") %> prohibited this spec from being saved:</h2>

        <ul>
          <% spec.errors.each do |error| %>
            <li><%= error.full_message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="form-field">
      <%= form.label :title %>
      <%= form.text_field :title %>
    </div>

    <div class="actions">
      <%= form.submit :Submit, style:'border-radius: 5px; height: 40px; width: 80%; margin-left: 10%;' %>
    </div>
  <% end %>
</div>
